<div class="container">  
    <div class="headline">
        <h1>Node チャットルーム</h1>
    </div>
    <div class="row">
        <form method="post" action="/">
            <div class="room-login_user">
                <h6>ログインユーザ：{{userName}}さん</h6>
                <input id="userName" type="hidden" value="{{userName}}">
            </div>
            <div class="user-overview">
                <div class="overview-title">ログインしているユーザ</div>
                <div id="login-users"></div>
            </div>
            <div class="room-message">
                <textarea id="message" rows="3" class="room-message_textarea" placeholder="投稿文を入力してください"></textarea>
            </div>
            <div class="room-submit">
                <input type="button" value="投稿" class="btn btn-info room-publish_button" onclick="publish();">
                <input type="button" value="メモ" class="btn btn-outline-info waves-effect room-memo_button" onclick="memo();">        
            </div>
            <div class="room thread">
                <div id="thread"></div>
            </div>
            <div class="room-exit">
                <input type="button" value="退室する" class="common-button room-exit_button" onclick="exit();">
            </div>
        </form>
    </div>
</div>

<script src="/javascripts/socket.js"></script>
<script src="/javascripts/enter.js"></script>
<script src="/javascripts/publish.js"></script>
<script src="/javascripts/memo.js"></script>
<script src="/javascripts/exit.js"></script>
<script src="/javascripts/PublishEnterKey.js"></script>
